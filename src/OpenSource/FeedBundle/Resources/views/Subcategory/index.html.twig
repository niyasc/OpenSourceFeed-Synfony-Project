{% extends 'OpenSource\FeedBundle::base.html.twig' %}

{% block content -%}
<div class="page-header">
  <h1>{{title}}</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for entity in entities %}
    <tr>
      <td><a href="{{ path('subcategory_show', { 'name': entity.name, 'category' : entity.category.name }) }}">{{ loop.index }}</a></td>
      <td>{{ entity.name }}</td>
      <td>

        <a class="btn btn-primary btn-xs" href="{{ path('subcategory_show', { 'name': entity.name, 'category' : entity.category.name }) }}">show</a>

        <a class="btn btn-primary btn-xs" href="{{ path('subcategory_edit', { 'name': entity.name, 'category' : entity.category.name }) }}">edit</a>

      </td>
    </tr>
    {% endfor %}
    <tr>
      <td colspan="3" class="text-center">
        <a class="btn btn-default btn-xs" href="{{ path('subcategory_new', {'category' : title}) }}">
          Create a new entry
        </a>

        <a class="btn btn-default btn-xs" href="{{ path('category') }}">
          View All Categories
        </a>
      </td>
    </tr>
  </tbody>
</table>



{% endblock %}
