{% extends 'OpenSource\FeedBundle::base.html.twig' %}

{% block content -%}
<div class="page-header">
  <h1>{{title}}</h1>
</div>
<a class="btn btn-default btn-xs text-right" href="{{ path('category_new') }}">
  Create a new entry
</a>
<table class="table table-striped table-bordered table-rounded">
  <thead>
    <tr>
      <th>S.No</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for entity in entities %}
    <tr>
      <td><a href="{{ path('subcategory', { 'category': entity.name }) }}">{{ loop.index }}</a></td>
      <td>{{ entity.name }}</td>
      <td>
        <a class="btn btn-primary btn-xs" href="{{ path('subcategory', { 'category': entity.name }) }}">show</a>

        <a class="btn btn-primary btn-xs" href="{{ path('category_edit', { 'name': entity.name }) }}">edit</a>

      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>




{% endblock %}
